<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_bookstore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"

    android:background="@drawable/ic_item_transparent"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout

        android:background="@drawable/ic_item_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_BookstoreImage"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:maxLength="100"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nhã Nam Thư Quán"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_BookstoreImage"
            android:layout_toEndOf="@+id/iv_BookstoreImage"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/iv_BookstoreImage"
            android:layout_toEndOf="@+id/iv_BookstoreImage"
            android:maxLength="190" />

        <TextView
            android:id="@+id/tv_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/iv_BookstoreImage"
            android:layout_toEndOf="@+id/iv_BookstoreImage"
            android:maxLength="15"
            tools:text="0862906951" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_telephone"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/iv_BookstoreImage"
            android:layout_toEndOf="@+id/iv_BookstoreImage"
            android:maxLength="30"
            tools:text="nhasachcachep@gmail.com" />




    </RelativeLayout>

</android.support.v7.widget.CardView>